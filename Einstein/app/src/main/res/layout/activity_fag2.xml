<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/theme0"
                android:text="@string/theme2_1"
                android:background="@color/blue1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="30sp"
                android:onClick="button0_clicked"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"
                android:onClick="backToMain"
                android:elevation="2dp"/>

        </RelativeLayout>




        <Button
            android:id="@+id/theme1"
            android:text="@string/theme2_2"
            android:background="@color/blue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button1_clicked"/>

        <Button
            android:id="@+id/theme2"
            android:text="@string/theme2_3"
            android:background="@color/blue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button2_clicked"/>

        <Button
            android:id="@+id/theme3"
            android:text="@string/theme2_4"
            android:background="@color/blue4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button3_clicked"/>

        <Button
            android:text="@string/theme2_5"
            android:background="@color/blue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button4_clicked"/>

        <Button
            android:text="@string/theme2_6"
            android:background="@color/blue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button5_clicked"/>

        <Button
            android:text="@string/theme2_7"
            android:background="@color/blue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:onClick="button6_clicked" />

    </LinearLayout>


</ScrollView>