<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/box1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Your Classes"
                android:textSize="30dp"
                android:layout_alignParentLeft="true"
                />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:onClick="goToLogin"
                android:text="Logout" />
        </RelativeLayout>


        <Button
            android:id="@+id/class1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c9d3df"
            android:onClick="class1OnClick"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Mathematics"
            android:textSize="30sp" />

        <Button
            android:id="@+id/class2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e4e9ec"
            android:onClick="class2OnClick"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Statistics"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/chatroomButton"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:onClick="chatroomOnClick"
                android:src="@mipmap/ic_chatroom" />


            <ImageView
                android:id="@+id/calendarButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="calenderOnClick"
                android:src="@mipmap/ic_calendar" />


            <ImageView
                android:id="@+id/trophyroomButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="trophyOnClick"
                android:src="@mipmap/ic_trophyroom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chat Room"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Calendar"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Trophy Room"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>