<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/backToListOfRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="backToRooms"
        android:text="Back to rooms" />

    <EditText
        android:id="@+id/msgInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btSend"
        android:layout_toStartOf="@+id/btSend"
        android:ems="10"
        android:hint="Write your message"
        android:inputType="text" />

    <Button
        android:id="@+id/btSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/backToListOfRooms"
        android:layout_alignStart="@+id/backToListOfRooms"
        android:layout_below="@+id/messageList"
        android:text="Send" />

    <ListView
        android:id="@+id/messageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/msgInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backToListOfRooms"
        android:cacheColorHint = "@android:color/transparent"/>


</RelativeLayout>

